package kiosk.client;

import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.GridLayout;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class AdminLogin extends JFrame {
	
	JPanel idPasswordPanel, loginCancelPanel, numberPadPanel;
	JComboBox<String> adminIdSelect;
	JTextField adminPassword;
	JButton loginButton, cancelButton;
	String password = "";
	int adminPasswordLength = 12;
	
	
	public AdminLogin() {
		
		// 1. 아이디, 패스워드 패널
		JPanel idPasswordPanel = new JPanel(new GridLayout(2,1));
		
		// 관리자 아이디 선택
		adminIdSelect = new JComboBox<>(new String[] {"선택하세요", "Primary", "Secondary"});
		adminIdSelect.setSelectedIndex(0);
		idPasswordPanel.add(new JLabel("ID"));
		idPasswordPanel.add(adminIdSelect);
		
		// 패스워드 입력 
		adminPassword = new JTextField(6);
		idPasswordPanel.add(new JLabel("PW"));
		idPasswordPanel.add(adminPassword);
		
		// 2. 로그인, 취소 패널
		JPanel loginCancelPanel = new JPanel(new FlowLayout(FlowLayout.CENTER));
		JButton loginButton = new JButton("Login");
		JButton cancelButton = new JButton("Cancel");
		loginCancelPanel.add(loginButton);
		loginCancelPanel.add(cancelButton);
		
		// 3. 넘버패드 패널
		JPanel numberPadPanel = new JPanel(new GridLayout(4,3));
		String[] buttons = {"7", "8", "9", "4", "5", "6", "1", "2", "3", "←", "0", "C"};
		numberPadPanel.add(this);
		
		this.setBounds(300, 350, 280, 300);
		this.setVisible(true);
		this.addWindowListener(new WindowAdapter() {

			@Override
			public void windowClosing(WindowEvent e) {
				dispose();
			}
		});
		
		
	}
	
	public static void main(String[] args) {
	    new AdminLogin();

	}
	
}



	
