	<select id="couponSetting" resultType="kiosk.vo.CouponSettingVO">
		SELECT c.productIdx, c.couponSettingName, c.couponSettingGrade, c.couponSettingRate,
		c.couponSettingFixed, c.couponSettingStatus, p.productName
		FROM kiosk.couponSetting AS c
		INNER JOIN kiosk.product p ON p.productIdx = c.productIdx
		ORDER BY couponSettingGrade ASC;
	</select>

</mapper>

